    "&lt;div class=\"btn-group\" role=\"group\"&gt;\n",
    "  &lt;input type=\"radio\" name=\"plan\" id=\"basic\" value=\"basic\" class=\"btn-group-input\" checked&gt;\n",
    "  &lt;label for=\"basic\" class=\"btn btn-group-item\"&gt;B√°sico&lt;/label&gt;\n  ",
    "  &lt;input type=\"radio\" name=\"plan\" id=\"pro\" value=\"pro\" class=\"btn-group-input\"&gt;\n",
    "  &lt;label for=\"pro\" class=\"btn btn-group-item\"&gt;Pro&lt;/label&gt;\n",
    "&lt;/div&gt;",
    "</pre>",
    
    "<h3 style='margin-top: 2rem;'>Clases Disponibles</h3>",
    
    "<h4>Colores</h4>",
