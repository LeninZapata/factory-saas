{
  "id": "cliente-form",
  "title": "Formulario de Cliente",
  "fields": [
    {
      "name": "nombre",
      "label": "i18n:clientes.field.name",
      "type": "text",
      "required": true,
      "validation": "required|min:3",
      "placeholder": "i18n:clientes.placeholder.name"
    },
    {
      "type": "group",
      "columns": 2,
      "gap": "normal",
      "fields": [
        {
          "name": "email",
          "label": "i18n:clientes.field.email",
          "type": "email",
          "required": true,
          "validation": "required|email",
          "placeholder": "i18n:clientes.placeholder.email"
        },
        {
          "name": "telefono",
          "label": "i18n:clientes.field.phone",
          "type": "text",
          "required": true,
          "validation": "required|min:7",
          "placeholder": "i18n:clientes.placeholder.phone"
        }
      ]
    },
    {
      "name": "empresa",
      "label": "i18n:clientes.field.company",
      "type": "text",
      "placeholder": "i18n:clientes.placeholder.company"
    },
    {
      "name": "estado",
      "label": "i18n:clientes.field.status",
      "type": "select",
      "required": true,
      "options": [
        {"value": "activo", "label": "i18n:clientes.status.active"},
        {"value": "inactivo", "label": "i18n:clientes.status.inactive"},
        {"value": "pendiente", "label": "i18n:clientes.status.pending"}
      ]
    },
    {
      "type": "grouper",
      "mode": "linear",
      "collapsible": true,
      "openFirst": false,
      "groups": [
        {
          "title": "i18n:clientes.group.additional_info",
          "fields": [
            {
              "type": "group",
              "columns": 2,
              "gap": "normal",
              "fields": [
                {
                  "name": "pais",
                  "label": "i18n:clientes.field.country",
                  "type": "text",
                  "placeholder": "i18n:clientes.placeholder.country"
                },
                {
                  "name": "ciudad",
                  "label": "i18n:clientes.field.city",
                  "type": "text",
                  "placeholder": "i18n:clientes.placeholder.city"
                }
              ]
            },
            {
              "name": "direccion",
              "label": "i18n:clientes.field.address",
              "type": "textarea",
              "rows": 3,
              "placeholder": "i18n:clientes.placeholder.address"
            },
            {
              "name": "codigo_postal",
              "label": "i18n:clientes.field.postal_code",
              "type": "text",
              "placeholder": "i18n:clientes.placeholder.postal_code"
            }
          ]
        },
        {
          "title": "i18n:clientes.group.commercial_info",
          "fields": [
            {
              "name": "tipo_cliente",
              "label": "i18n:clientes.field.client_type",
              "type": "select",
              "options": [
                {"value": "minorista", "label": "i18n:clientes.client_type.retail"},
                {"value": "mayorista", "label": "i18n:clientes.client_type.wholesale"},
                {"value": "corporativo", "label": "i18n:clientes.client_type.corporate"}
              ]
            },
            {
              "type": "group",
              "columns": 2,
              "gap": "normal",
              "fields": [
                {
                  "name": "descuento",
                  "label": "i18n:clientes.field.discount",
                  "type": "number",
                  "placeholder": "0-100",
                  "validation": "number|minValue:0|maxValue:100"
                },
                {
                  "name": "limite_credito",
                  "label": "i18n:clientes.field.credit_limit",
                  "type": "number",
                  "placeholder": "i18n:clientes.placeholder.credit_limit"
                }
              ]
            },
            {
              "name": "notas",
              "label": "i18n:clientes.field.notes",
              "type": "textarea",
              "rows": 4,
              "placeholder": "i18n:clientes.placeholder.notes"
            }
          ]
        }
      ]
    }
  ],
  "onSubmit": "toast.success(__('clientes.message.saved')); modal.closeAll();"
}
