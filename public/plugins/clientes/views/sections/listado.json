{
  "id": "clientes-listado",
  "title": "Gestión de Clientes",
  "content": [
    {
      "type": "html",
      "order": 1,
      "content": "<div class='view-toolbar'><button class='btn btn-primary' onclick=\"modal.open('clientes|forms/cliente-form', {title: '➕ Nuevo Cliente'})\">➕ Nuevo Cliente</button></div>"
    },
    {
      "type": "component",
      "component": "datatable",
      "order": 2,
      "config": {
        "source": "plugins/clientes/views/mock/clientes.json",
        "columns": [
          {
            "id": { "name": "i18n:clientes.column.id", "width": "80px" }
          },
          {
            "nombre": { "name": "i18n:clientes.column.name" }
          },
          {
            "email": { "name": "i18n:clientes.column.email" }
          },
          {
            "telefono": { "name": "i18n:clientes.column.phone" }
          },
          {
            "empresa": { "name": "i18n:clientes.column.company" }
          },
          {
            "estado": { "name": "i18n:clientes.column.status" }
          }
        ],
        "actions": {
          "edit": {
            "name": "i18n:clientes.action.edit",
            "onclick": "modal.open('clientes|forms/cliente-form', {title: 'Editar Cliente'})"
          },
          "delete": {
            "name": "i18n:clientes.action.delete",
            "onclick": "if(confirm('¿Eliminar este cliente?')) { toast.success('Cliente eliminado'); datatable.refreshFirst(); }"
          }
        }
      }
    }
  ]
}
